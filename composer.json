{
    "name": "edpittol/curso-php-conference-2025",
    "description": "Desenvolvendo conhecimento em programação PHP para WordPress.",
    "version": "1.0.0",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Eduardo Pittol",
            "email": "pittol@aztecweb.net"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "require-dev": {
        "lucatume/wp-browser": "^4.5",
        "php-stubs/woocommerce-stubs": "^10.3",
        "phpstan/extension-installer": "^1.4",
        "rector/rector": "^2.2",
        "roots/wordpress-core-installer": "*",
        "roots/wordpress-no-content": "*",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "wp-cli/wp-cli-bundle": "*",
        "wp-coding-standards/wpcs": "^3.2",
        "wpackagist-plugin/woocommerce": "*",
        "wpackagist-plugin/wordpress-importer": "*",
        "wpackagist-theme/storefront": "*"
    },
    "extra": {
        "wordpress-install-dir": "public/wp",
        "installer-paths": {
            "public/packages/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "public/packages/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "roots/wordpress-core-installer": true
        },
        "platform": {
            "php": "8.4"
        },
        "sort-packages": true
    },
    "scripts": {
        "qa": [
            "phpcs",
            "rector --dry-run",
            "phpstan --memory-limit=1G"
        ],
        "qa-fix": [
            "rector",
            "phpcbf"
        ]
    }
}
